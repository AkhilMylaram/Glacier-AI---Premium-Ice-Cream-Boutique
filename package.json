{
  "name": "glacier-ai-monorepo",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:auth": "ts-node authentication-service/server.ts",
    "dev:catalog": "ts-node catalog-service/server.ts",
    "dev:gateway": "ts-node apigateway-service/server.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:auth\" \"npm run dev:catalog\" \"npm run dev:gateway\"",
    "build": "vite build"
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "mysql2": "^3.6.0",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@types/react": "^19.2.3",
    "@types/react-dom": "^19.2.3",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.1",
    "vite": "^5.0.0",
    "concurrently": "^8.2.0"
  }
}